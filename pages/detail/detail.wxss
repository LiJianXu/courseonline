/* pages/detail/detail.wxss */
.video{
  width: 100%;
  height: 200px;
}
.bottom{
  position: fixed;bottom: 0;
  width: 100%;
  height: 40px;
  background-color: #EBEBEB;
  padding: 10px 10px;
}

.title{
  font-size: 15px;
}
.price{
  font-size: 15px;
  color: #0f0;
}
.comment{
position: fixed;bottom: 0;
  width: 100%;
  height: 30px;
  background-color: #EBEBEB;
  padding: 10px 10px;
}
.input{
  position: relative;
  float: left;
  height: 25px;
  width: 68%;
  border: 1px #ff6600 solid;
  border-radius: 5px;
}
.send{
  position: relative;
  float: right;
  right: 20px;
  background-color: #ff6600;
  color: #fff;
  height: 25px;
  width: auto;
  border-radius:5px;
  font-size: 15px;
  line-height: 25px;
}
button{
  padding: 0px;
  font-weight: 15;
}
button:not([size='mini']){
  width: 70px;
}
.allmenu{
  padding: 5px 0px;
}

.detail-view{
 height: 24px;

    padding-left: 20px;
    font-size: 15px;
 }

/*hover-class需要放在.detail-view后，否则 background会被本身的detail-view的css覆盖*/
.detail-hover{
    background: #CCC;
    color: #ff6600;
    font-size: 15px;
    padding-left: 20px;
    height: 24px;
}
.shexiangji{
  position: relative;
  float: left;
  line-height: 16px;
  height: 16px;
  width: 16px;
  padding: 4px 0px;
}
.text{
  position: relative;
  float: left;
  left: 10px;
  font-size: 10px;
  line-height: 24px;
  height: 24px;
}
.plane{
  width: 100%;
  padding-bottom: 60px;
}